mixin _LabeledEntry(args)
    //Arguments:
        name - the name of the field (default Entry)
        label - the field's label
        type - The field's type (default text)
        placeholder - data placeholder (default Label)
        value - value placeholder (default nothing)
        ID is auto-generated - #entry-<name>
    -
        args.type = args.type || 'text';
        args.placeholder = args.placeholder || args.label;
        args.value = args.value || "";

    label(for="entry-"+args.name)=args.label
    input.form-control(name=args.name, autocomplete="off", type=args.type, placeholder=args.placeholder, value=args.value)


mixin _cardEntries(card)
    .row
        .col-sm-4.col-xs-9.form-group
            +_LabeledEntry({name:"name", label:"Name", value:card.name})

        .col-sm-2.col-xs-3.form-group
            +_LabeledEntry({name:"quantity", label:"Qty.", value:card.quantity})

        .col-sm-3.col-xs-6.form-group
            +_LabeledEntry({name:"cardType", label:"Card Type", value:card.cardType})

        .col-sm-3.col-xs-6.form-group
            +_LabeledEntry({name:"actualType", label:"Actual Type", value:card.actualType})

        .col-sm-3.col-xs-4.form-group
            +_LabeledEntry({name:"level", label:"Level", value:card.level})

        .col-sm-5.col-xs-8.form-group
            +_LabeledEntry({name:"design", label:"Design", value:card.design})

        .col-sm-2.col-xs-6.form-group
            +_LabeledEntry({name:"series", label:"Series", value:card.series})
        .col-sm-2.col-xs-6.form-group
            +_LabeledEntry({name:"expansion", label:"Expansion", value:card.expansion})

