include _cardEntries
extends base

block head
    script(src="/r/js/deleteCardButton.js")

block body

    form(action=target, method="post")
        i.fa.fa-save.fa-5x
        h1 View a Card
            .pull-xs-right.btn-group.btn-group-lg
                button.btn.btn-secondary(type='submit'): i.fa.fa-save
                button.btn.btn-secondary.delete-card(data-card-id=card._id): i.fa.fa-trash
        mixin _cardEntries(card)
